{
  "name": "dynamicendpointassistant",
  "productName": "DynamicEndpoint Assistant",
  "version": "1.0.0-beta.3",
  "description": "A freemium desktop application for natural language querying of Microsoft Graph APIs through local LLM integration",
  "main": "dist/main.js",
  "homepage": "https://github.com/darrenjrobinson/EntraPulseLite",
  "repository": {
    "type": "git",
    "url": "https://github.com/darrenjrobinson/EntraPulseLite.git"
  },
  "bugs": {
    "url": "https://github.com/darrenjrobinson/EntraPulseLite/issues"
  },
  "scripts": {
    "start": "npm run build && electron-forge start",
    "dev": "webpack --mode=development --watch",
    "build": "webpack --mode=production && node copy-assets.js",
    "build:dev": "webpack --mode=development && node copy-assets.js",
    "clean": "rimraf dist",
    "package": "npm run build && electron-forge package",
    "asset-diagnostics": "node asset-diagnostics.js",
    "make": "npm run build && electron-forge make",
    "publish": "npm run build && electron-forge publish",
    "lint": "eslint src/**/*.{ts,tsx}",
    "test": "jest",
    "test:ci": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:microsoft-docs": "jest --testPathPattern=microsoft-docs --verbose",
    "prepare": "husky",
    "version:beta": "npm version prerelease --preid=beta",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "security:check": "npm audit --audit-level=moderate && echo 'Security check passed'",
    "pre-release": "npm run test && npm run security:check && npm run build",
    "build:release": "npm run build && electron-builder",
    "build:sign": "cross-env PATH=\"C:\\Program Files (x86)\\Windows Kits\\10\\bin\\10.0.22621.0\\x64;%PATH%\" electron-builder",
    "release": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192\" electron-builder --publish=always",
    "release:local": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192\" electron-builder --publish=never",
    "release:local:unsigned": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false WIN_CSC_IDENTITY_AUTO_DISCOVERY=false CSC_NAME= WIN_CSC_LINK= electron-builder --publish=never",
    "build:portable": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win portable --publish=never",
    "build:unsigned": "npm run build && electron-builder --config electron-builder-unsigned.json --publish=never",
    "build:win": "npm run build && electron-builder --win",
    "build:electron:win": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --config electron-builder-unsigned.json --win --publish=never",
    "build:electron:mac": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --config electron-builder-unsigned.json --mac --publish=never",
    "build:electron:linux": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --config electron-builder-unsigned.json --linux --publish=never",
    "sign:verify-cert": "powershell -ExecutionPolicy Bypass -File scripts/verify-certificate.ps1",
    "build:signed": "powershell -ExecutionPolicy Bypass -File scripts/build-and-sign.ps1",
    "build:signed:publish": "powershell -ExecutionPolicy Bypass -File scripts/build-and-sign.ps1 -Publish",
    "create-release": "pwsh scripts/create-release.ps1",
    "release:unsigned": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --publish=never",
    "release:unsigned:publish": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --config electron-builder-unsigned.json --publish=always"
  },
  "keywords": [
    "microsoft",
    "graph",
    "entra",
    "azure",
    "llm",
    "mcp",
    "electron",
    "desktop",
    "natural-language",
    "api",
    "freemium"
  ],
  "author": {
    "name": "Darren Robinson",
    "email": "darren@darrenjrobinson.com"
  },
  "license": "MIT",
  "build": {
    "appId": "com.darrenjrobinson.entrapulselite",
    "productName": "DynamicEndpoint Assistant",
    "directories": {
      "output": "dist-release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName} ${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DynamicEndpoint Assistant",
      "artifactName": "${productName} Setup ${version}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "publish": {
      "provider": "github",
      "owner": "darrenjrobinson",
      "repo": "EntraPulseLite"
    }
  },
  "dependencies": {
    "@azure/msal-node": "^3.6.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@merill/lokka": "^0.2.0",
    "@microsoft/mgt-components": "^4.6.0",
    "@microsoft/mgt-element": "^4.6.0",
    "@microsoft/mgt-react": "^4.6.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@microsoft/microsoft-graph-types": "^2.40.0",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@mui/icons-material": "^5.15.11",
    "@mui/material": "^5.15.11",
    "@types/electron-store": "^1.3.1",
    "@types/pdfkit": "^0.17.3",
    "axios": "^1.9.0",
    "dotenv": "^16.4.7",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.6.2",
    "eventemitter3": "^5.0.1",
    "exceljs": "^4.4.0",
    "pdfkit": "^0.17.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.7",
    "recharts": "^3.1.2",
    "remark-gfm": "^3.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "assert": "^2.1.0",
    "buffer": "^6.0.3",
    "copy-webpack-plugin": "^13.0.0",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^7.1.2",
    "dotenv": "^16.4.7",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "events-browserify": "^0.0.1",
    "global": "^4.4.0",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^9.1.7",
    "ico-to-png": "^0.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "querystring-es3": "^0.2.1",
    "rimraf": "^6.0.1",
    "sharp": "^0.34.2",
    "stream-browserify": "^3.0.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  }
}
