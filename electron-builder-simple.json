{
  "appId": "com.playhousehosting.entrapulse-lite",
  "productName": "EntraPulse Lite",
  "directories": {
    "output": "dist-release"
  },
  "files": [
    "dist/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraFiles": [
    {
      "from": "assets",
      "to": "assets"
    }
  ],
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "assets/icon.ico",
    "artifactName": "${productName}-${version}-${arch}-portable.${ext}",
    "verifyUpdateCodeSignature": false,
    "forceCodeSigning": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "EntraPulse Lite"
  },
  "portable": {
    "artifactName": "${productName}-${version}-${arch}-portable.${ext}"
  },
  "publish": {
    "provider": "generic",
    "url": "https://github.com/playhousehosting/EntraPulseLite/releases/"
  }
}